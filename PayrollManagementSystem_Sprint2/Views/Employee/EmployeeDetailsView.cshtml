@model PayrollManagementSystem_Sprint2.Models.EmployeeMaster

@{
    ViewData["Title"] = "View Employee Details ";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h1 style="color:white">Personal Details</h1>

<div style="color:white">

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeePassword)
        </dd>
        <dt class="col-sm-2">
           Date of Joining
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeDoj)
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeFirstname)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeLastname)
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeUserName)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaritalStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaritalStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="SelfAddressDetails" asp-route-id="@Model.EmployeeId">Address Details</a> |
    <a asp-action="EmployeeDashboard">Back to Dashboard</a>
</div>
<style>
    label {
        color: white;
    }

    a {
        color: greenyellow;
        font-weight: bold;
    }
</style>