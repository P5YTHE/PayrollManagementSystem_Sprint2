@model IEnumerable<PayrollManagementSystem_Sprint2.Models.PayrollMaster>

@{
    ViewData["Title"] = "Payroll Report";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="color:white"><strong>Payroll Report</strong></h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeDesignation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeGrade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeDesignation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeSalary)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeGrade)
                </td>
                <td>
                    <a asp-action="ViewPayrollDetails" asp-route-id="@item.EmployeeId">Generate Salary</a> |
                    <a asp-action="EditGradeDetails" asp-route-id="@item.EmployeeId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="PayrollReportDownload"><strong>Download Payroll Report</strong></a> |
    <a asp-action="AdminDashboard"><strong>Back to Dashboard</strong></a>
</p>
<div class="btn-box">
    <a asp-area="" asp-controller="Authentication" asp-action="Logout" class="btn-1"><strong>Logout</strong> </a>
</div>
<style>
    label {
        color: white;
    }

    a {
        color: greenyellow;
        font-weight: bold;
    }
</style>

